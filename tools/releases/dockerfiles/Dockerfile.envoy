FROM debian:11 as envoy
ARG ENVOY_VERSION
ARG ARCH
ARG ENVOY_DISTRO=alpine

COPY /build/artifacts-linux-$ARCH/envoy/envoy-$ENVOY_VERSION-$ENVOY_DISTRO /envoy

RUN apt-get update && \
    apt-get install --no-install-recommends -y libcap2-bin=1:2.44-1 && \
    # extended permissions are stored into file inode and copied by docker when using buildx
    setcap cap_net_bind_service+ep /envoy \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*